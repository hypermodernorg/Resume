<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - test Resume</title>
    <meta name="keywords" content="@ViewBag.Keywords" />
    <meta name="Description" content="@ViewBag.Description" />
    <link rel="stylesheet" href="~/css/custom.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" type="text/css" href="/css/PartialTwo/main.css" />
    <link rel="stylesheet" type="text/css" href="/css/PartialTwo/ColorVariations/purple.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">


    <script>
        function toggleTheme(themeName) {

            var theme = document.getElementsByTagName('link')[3];
            theme.setAttribute('href', `/css/PartialTwo/ColorVariations/${themeName}.css`);
        }
    </script>


</head>

<body class="bgMain">
    <div class="container-sm mt-5 mb-5">
        <div class="row">

            @*large screen*@
            <div class="col-lg-4 d-none d-lg-block bgDark p-4">
                <div class="row userDisplayNameRow bgDark p-3">
                    <div class="col-2 userDisplayNameCol text-end ">
                        <h1 class="text-white fs-1 namePartialTwo align-text-bottom">@Model.UserDisplayName</h1>
                    </div>
                    <div class="col-10 userDisplayNameCol text-end ">
                        <h1 class="text-white-50 fs-1 namePartialTwo">@Model.UserAspiration</h1>
                    </div>
                </div>

                @*Large screen skills*@
                <div class="row pt-5 bgDark">
                    <div class="col">
                        <h3 class="text-white-50 text-center">@Model.SkillName</h3>
                    </div>
                </div>

                @{
                    foreach (var singleSkill in @Model.Skills)
                    {
                        var srWidth = singleSkill.SkillRating.ToString() + "%";
                        <div class="row pt-2 bgDark">
                            <div class="col-4">
                                <p class="text-white text-end">@singleSkill.Name</p>
                            </div>
                            <div class="col-8">

                                <div class="progress">
                                    <div class="progress-bar" role="progressbar" style="width: @srWidth" aria-valuenow="@singleSkill.SkillRating" aria-valuemin="0" aria-valuemax="100">@srWidth</div>
                                </div>

                            </div>
                        </div>
                    }
                }
                @*End large screen skills*@

                @*Large screen contacts*@

                @{
                    if (Model.Contacts != null)
                    {
                        <div class="row pt-5">
                            <div class="col">
                                <h3 class="text-white-50 text-center">@Model.ContactName</h3>
                            </div>
                        </div>

                        if (@Model.Contacts.Phone != null)
                        {
                            <div class="row">
                                <div class="col-1 text-end">
                                    <p class="text-white text-end"><i class="bi bi-telephone"></i></p>
                                </div>
                                <div class="col-11">
                                    <p class="text-white">@Model.Contacts.Phone</p>
                                </div>
                            </div>
                        }
                        if (@Model.Contacts.Email != null)
                        {
                            <div class="row ">
                                <div class="col-1 text-end">
                                    <p class="text-white text-end"><i class="bi bi-envelope"></i></p>
                                </div>
                                <div class="col-11">
                                    <p class="text-white">@Model.Contacts.Email</p>
                                </div>
                            </div>
                        }
                        if (@Model.Contacts.Linkedin != null)
                        {
                            <div class="row ">
                                <div class="col-1 text-end">
                                    <p class="text-white text-end"><i class="bi bi-linkedin"></i></p>
                                </div>
                                <div class="col-11">
                                    <p class="text-white">@Model.Contacts.Linkedin</p>
                                </div>
                            </div>
                        }
                        if (@Model.Contacts.PersonalWebsite != null)
                        {
                            <div class="row ">
                                <div class="col-1 text-end">
                                    <p class="text-white text-end"><i class="bi bi-file-earmark-text"></i></p>
                                </div>
                                <div class="col-11">
                                    <p class="text-white">@Model.Contacts.PersonalWebsite</p>
                                </div>
                            </div>
                        }



                    }
                }


                @*End large screen contacts*@



            </div>

            @*Small screen*@
        <div class="col-lg-4 d-lg-none">
            <div class="row userDisplayNameRow bgDark pt-3">
                <div class="col userDisplayNameCol text-center">
                    <h1 class="text-white fs-1 namePartialTwoB align-text-bottom">@Model.UserDisplayName</h1>
                </div>
            </div>
            <div class="row userDisplayNameRow bgDark">
                <div class="col userDisplayNameCol text-center">
                    <h1 class="text-white-50 fs-2 namePartialTwoB">Full Stack Web Developer</h1>
                </div>
                <hr />
            </div>
            <div class="row contactSmall bgDark pb-3">
                <div class="col text-end">


                    @{
                        if (Model.Contacts.Phone != null)
                        {
                      

                                <a href="tel:@Model.Contacts.Phone" class="text-white-50 p-2"><i class="bi bi-telephone"></i></a>


          
                        }
                        if (Model.Contacts.Email != null)
                        {
                    
                                <a href="@Model.Contacts.Email" class="text-white-50 p-2"><i class="bi bi-envelope"></i></a>

                   
                        }
                        if (Model.Contacts.Linkedin != null)
                        {
                        

                                <a href="@Model.Contacts.Linkedin" class="text-white-50 p-2"><i class="bi bi-linkedin"></i></a>

                      
                        }
                    }



                </div>
            </div>
         </div>
            @*End Small Screen*@

        <div class="col-lg-8 bgLight pt-1 ps-4 pe-4 pb-4">

            <div class="row">
                <div class="col text-end">
                    <label class="container1 d-inline">
                        <input type="radio" checked="checked" name="radio" onclick="toggleTheme('purple')">
                        <span class="checkmark checkmark-purple"></span>
                    </label>
                    <label class="container1 d-inline">
                        <input type="radio"  name="radio" onclick="toggleTheme('blue')">
                        <span class="checkmark checkmark-blue"></span>
                    </label>

                </div>
            </div>
            <div class="row">
                <div class="col text-start">
                    <h1 class="text-uppercase">Objective</h1>
                    <hr />
                </div>
            </div>
            <div class="row">
                <div class="col text-start">
                    <p>@Model.Summary</p>
                    <hr />
                </div>
            </div>


            @{
                if (@Model.Experiences != null)
                {
                    <div class="row">
                        <div class="col text-start pt-5">
                            <h1 class="text-uppercase">@Model.ExperienceName</h1>
                            <hr />
                        </div>
                    </div>

                    foreach (var experience in Model.Experiences)
                    {
                        if (experience.StartDate !=null)
                        {

                        }
                        var sd = @DateTime.Parse(experience.StartDate);
                        //var ed = @DateTime.Parse(experience.EndDate);
                        <div class="row">
                            <div class="col-lg-1">
                                <span class="d-inline"><small>@sd.Year</small></span>

                                <br class="d-lg-none" />

                                @{
                                    if (experience.EndDate == null)
                                    {
                                        <span class="d-inline"><small>present</small></span>
                                    }
                                    else
                                    {
                                        <span class="d-inline"><small>@DateTime.Parse(experience.EndDate).Year</small></span>
                                    }

                                }


                            </div>
                            <div class="col-lg-11">
                                <div class="row">
                                    <div class="col fw-bold">@experience.Company</div>
                                </div>
                                <div class="row">
                                    <div class="col fst-italic">@experience.Position</div>
                                </div>

                                @{
                                    if (@experience.Description != null)
                                    {
                                        <div class="row">
                                            <div class="col">
                                                <ul>
                                                    @{
                                                        string[] desArray = @experience.Description.Split(new string[] { "\n", "\r\n" }, StringSplitOptions.RemoveEmptyEntries);

                                                        foreach (var desInd in desArray)
                                                        {
                                                            <li>@desInd</li>
                                                        }
                                                    }

                                                </ul>
                                            </div>
                                        </div>
                                    }
                                }
                                <hr />
                            </div>

                        </div>

                    }
                }
            }

            @{
                if (@Model.Educations != null)
                {
                    <div class="row">
                        <div class="col text-start pt-5">
                            <h1 class="text-uppercase">@Model.EducationName</h1>
                            <hr />
                        </div>
                    </div>

                    foreach (var education in Model.Educations)
                    {
                        var sd = @DateTime.Parse(education.StartDate);
                
        <div class="row">
            @*<div class="col-1">
            <span class="d-inline">@sd.Year</span>

            <br class="d-lg-none" />

            <span class="d-inline">@ed.Year</span>
        </div>*@

            <div class="col-lg-1">
                <span class="d-inline"><small>@sd.Year</small></span>

                <br class="d-lg-none" />

                @{
                    if (education.EndDate == null)
                    {
                        <span class="d-inline"><small>present</small></span>
                    }
                    else
                    {
                        <span class="d-inline"><small>@DateTime.Parse(education.EndDate).Year</small></span>
                    }

                }


            </div>
            <div class="col-11">
                <div class="row">
                    <div class="col fw-bold">@education.School</div>
                </div>
                <div class="row">
                    <div class="col fst-italic">@education.Degree</div>
                </div>

                @{
                    if (education.Description != null)
                    {
                        <div class="row">
                            <div class="col">
                                <ul>
                                    @{
                                        string[] desArray = education.Description.Split(new string[] { "\n", "\r\n" }, StringSplitOptions.RemoveEmptyEntries);

                                        foreach (var desInd in desArray)
                                        {
                                            <li>@desInd</li>
                                        }
                                    }

                                </ul>
                            </div>
                        </div>
                    }
                }
                <hr />
            </div>

        </div>

                    }
                }
            }

            @*Skills*@

            @{
                if (Model.Skills != null)
                {
                    <div class="row pt-5 d-lg-none">
                        <div class="col">
                            <h1 class="text-uppercase">@Model.SkillName</h1>
                            <hr />
                        </div>
                    </div>
              
                        foreach (var singleSkill in @Model.Skills)
                        {
                            var srWidth = singleSkill.SkillRating.ToString() + "%";
                            <div class="row pt-2 d-lg-none">
                                <div class="col-6">
                                    <p class="text-end">@singleSkill.Name</p>
                                </div>
                                <div class="col-6">


                                    <div class="progress">
                                        <div class="progress-bar" role="progressbar" style="width: @srWidth" aria-valuenow="@singleSkill.SkillRating" aria-valuemin="0" aria-valuemax="100">@srWidth</div>
                                    </div>



                                </div>
                            </div>
                        }
                  
                }
            }

            @*End Skills*@

        </div>
        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
  
</body>
</html>






