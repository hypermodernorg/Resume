@page
@model Resume.Areas.Identity.Pages.Admin.Roles.EditModel
@{
    

    <h3>Details for the Role: @Model.GetRole.Name</h3>
    <hr />
    <form method="post">
        <div class="row">
            <div class="col-2">
                <h6>Role Id: </h6>
            </div>
            <div class="col-5">
                @Model.GetRole.Id.ToString()
            </div>
            <div class="col-5">

            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-2">
                <h6>Role Name: </h6>
            </div>
            <div class="col-5">
                @Model.GetRole.Name
            </div>
            <div class="col-5">
                <input type="text" name="roleName" value="@Model.GetRole.Name"/>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col text-center"><h6>Permissions</h6></div>
              
        </div>
        <div class="row">
            <div class="col">
                <div class="row"><div class="col"><h6>Roles</h6></div></div>

                @for (var i = 0; i < Model.RoleClaims.Count; i++)
                {
                    <div class="row custom-control custom-checkbox">
                        <div class="col">
                            <input type="checkbox" asp-for="@Model.RoleClaims[i].Selected" />
                            <label asp-for="@Model.RoleClaims[i].Selected">@Model.RoleClaims[i].claim</label>
                            <input type="hidden" asp-for="@Model.RoleClaims[i].claim" />
                        </div>
                    </div>
                }
            </div>
            <div class="col">
                <div class="row"><div class="col"><h6>Users</h6></div></div>

                @for (var i = 0; i < Model.UserClaims.Count; i++)
                {
                    <div class="row custom-control custom-checkbox">
                        <div class="col">
                            <input type="checkbox" asp-for="@Model.UserClaims[i].Selected" />
                            <label asp-for="@Model.UserClaims[i].Selected">@Model.UserClaims[i].claim</label>
                            <input type="hidden" asp-for="@Model.UserClaims[i].claim" />
                        </div>
                    </div>
                }
            </div>
            @*<div class="col">
                <div class="row"><div class="col"><h6>Versions</h6></div></div>*@

                @*@for (var i = 0; i < Model.VersionClaims.Count; i++)
                {
                    <div class="row custom-control custom-checkbox">
                        <div class="col">
                            <input type="checkbox" asp-for="@Model.VersionClaims[i].Selected" />
                            <label asp-for="@Model.VersionClaims[i].Selected">@Model.VersionClaims[i].claim</label>
                            <input type="hidden" asp-for="@Model.VersionClaims[i].claim" />
                        </div>
                    </div>
                }*@
            @*</div>*@
        </div>


        <hr />
        <div class="row">
            <div class="col">
                <input type="hidden" name="roleId" value="@Model.GetRole.Id" />
                <button asp-page-handler="Update">Update</button>
            </div>

        </div>
    </form>
}
